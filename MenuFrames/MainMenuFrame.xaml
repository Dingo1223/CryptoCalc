<Page x:Class="CryptoCalc.MenuFrames.MainMenuFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoCalc.MenuFrames"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="MainMenuFrame">

    <Page.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource styleBtn}">
            <Setter Property="Margin" Value="0, 0, 0, 12"/>
        </Style>
    </Page.Resources>
    
    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
        <Button x:Name="btnBaseAlgorithms" Content="Базовые алгоритмы" Click="BtnBaseAlgorithms_Click"/>
        <Button x:Name="btnNaiveCiphers" Content="Наивные шифры" Click="BtnNaiveCiphers_Click"/>
        <Button x:Name="btnBoolFuncs" Content="Булевы функции" Click="BtnBoolFuncs_Click"/>
        <Button x:Name="btnOther" Content="Другое" Click="BtnOther_Click"/>
    </StackPanel>
</Page>
